@{
    ViewBag.Title = "Manage roles";

}
<div class="main-content">
    
        <h2>Role Manager</h2>
        <hr />

        <div class="row inner-rectangle">
            @{ if (ViewBag.Message != "")
                {
                    <div class="alert @ViewBag.Type alert-dismissible fade show col-md-12" role="alert">
                        <strong>@ViewBag.Message</strong> 
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    } 
                }
            <div class="col-sm-12 col-lg-12 col-md-12">
                <div class="card m-2">
                    <div class="card-header">
                        <h4>Role List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover col-sm-12 col-lg-12 col-md-12 ">
                            <tbody>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <tr>
                                        <td class="col-sm-1 col-lg-5 col-md-5">
                                            <strong>@role.Text </strong>
                                        </td>
                                        <td class="col-sm-1 col-lg-1 col-md-1">                                            
                                            <span onclick="return confirm('Are you sure?')"><a href="/Roles/Delete?roleID=@role.Value" class="delLink" style="color:red;">Delete</a></span> |
                                            @Html.ActionLink("Edit", "Edit", new { roleID = @role.Value })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-6 col-md-6">
                <div class="card m-2">
                    <div class="card-header">
                        <h4>Create A New Role</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Roles", new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div>
                                Role name: @Html.TextBox("roleName")
                                <input type="submit" value="Create" class="btn-default" />
                            </div>
                        }

                    </div>
                </div>
                <div class="card m-2">
                    <div class="card-header">
                        <h4>Add a Role to a User</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("AddRoles", "Roles"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <p>Username: @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })</p>
                            <p>Role: @Html.DropDownList("roleID", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })</p>

                            <p><input type="submit" value="Add" class="btn-default" /></p>

                        }
                    </div>
                </div>
            </div>
            <br />

            <div class="col-sm-6 col-lg-6 col-md-6">
                <div class="card m-2">
                    <div class="card-header">
                        <h4>List Roles for a User</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("GetRoles", "Roles"))
                        {
                            @Html.AntiForgeryToken()
                            <p>
                                Username: @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })
                                <input type="submit" value="List roles" class="btn-default" />
                            </p>
                        }

                        @if (ViewBag.RolesForThisUser != null)
                        {
                            <div class="alert-info">
                                <strong>Roles for this user </strong>
                                <ol>
                                    @foreach (string s in ViewBag.RolesForThisUser)
                                    {
                                        <li>@s</li>
                                    }
                                </ol>
                            </div>
                        }
                        
                    </div>
                </div>

                <div class="card m-2">
                    <div class="card-header">
                        <h4>Remove Role from User</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("DeleteRoles", "Roles"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <p>Username: @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })</p>
                            <p>Role: @Html.DropDownList("roleID", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })</p>
                            <p><input type="submit" value="Remove" class="btn-default" /></p>

                        }
                    </div>
                </div>

            </div>

        </div>

        
    </div>