@model PagedList.IPagedList<MACAWeb.Models.Person>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Persons";
}

<div class="main-content">
    <h2>@ViewBag.Title</h2>

    <hr />

    <div class="row index-row inner-rectangle">
        <div class="row index-row">
            <div class="col col-md-6">
                <div class="link-button">
                    @Html.ActionLink("Add new", "Create")
                </div>
            </div>
            <!--Search Form-->
            <div class="col col-md-4 search-box">
                @using (Html.BeginForm("Index", "Persons", FormMethod.Get))
                {
                    <div class="input-group">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control" })
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>
                }
            </div>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Persons", new { id=item.PersonID })">
                            <span title="Edit" class="glyphicon glyphicon-wrench action-icons" />
                        </a>&nbsp;
                        <a href="@Url.Action("Details", "Persons", new { id=item.PersonID })">
                            <span title="Details" class="glyphicon glyphicon-info-sign action-icons" />
                        </a>&nbsp;
                        <a href="@Url.Action("Delete", "Persons", new { id=item.PersonID })">
                            <span title="Delete" class="glyphicon glyphicon-trash action-icons" />
                        </a>
                    </td>
                </tr>
            }

        </table>
        <!--Pagination-->
        <br />
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>
