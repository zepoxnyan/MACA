@model MACAWeb.Models.SocialLink

@{
    ViewBag.Title = "Social links";
}

<div class="main-content">
    <h2>Edit Person's Social links</h2>

    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal inner-rectangle">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SocialLinkID)

            <div class="form-group">
                <label class="control-label col-md-2" for="SocialLinkTypeID">SocialLink Type</label>
                <div class="col-md-10">
                    @Html.DropDownList("SocialLinkTypeID", null, String.Empty, new { @class = "form-control big-dropbox" })
                    @Html.ValidationMessageFor(model => model.SocialLinkTypeID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProfileUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProfileUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProfileUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "SocialLinkIndex", routeValues: new { personId = ViewBag.PersonID }, htmlAttributes: new { })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
