@model IEnumerable<MACAWeb.Models.PublicationTypeLocalCoef>

@{
    ViewBag.Title = "Local Publication Types";
}
<div>
    <h2>@ViewBag.Title</h2>

    <hr />
    <div class="row">
        @Html.ActionLink("Add new", "CoefficientsCreate", new { pubTypeLocalId = ViewBag.PublicationTypeLocalID }, new { @class = "btn btn-default" })
    </div>
    <br />

    <div class="row">

        <div class="card col">
            <table class="table card-body">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Coefficient)
                    </th>
                    <th>Manage</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coefficient)
                        </td>
                        <td>
                            <a href="@Url.Action("CoefficientsEdit", "PublicationTypeLocals", new { id = item.PublicationTypeLocalCoefID, pubTypeLocalId = item.PublicationTypeLocalID })">
                                <span title="Edit" class="fa fa-wrench action-icons" />
                            </a>&nbsp;
                            <a href="@Url.Action("CoefficientsDelete", "PublicationTypeLocals", new { id = item.PublicationTypeLocalCoefID, pubTypeLocalId = item.PublicationTypeLocalID })">
                                <span title="Delete" class="fa fa-trash action-icons" />
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
    <div>
        <hr />
        @Html.ActionLink("Back to Local Publication Types Editing", "Edit", routeValues: new { id = ViewBag.PublicationTypeLocalID })
    </div>
</div>

