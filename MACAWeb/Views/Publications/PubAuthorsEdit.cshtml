@model MACAWeb.Models.PublicationAuthor

@{
    ViewBag.Title = "Publications";
}

<div class="main-content">
    <h2>Edit Publications's Author</h2>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal inner-rectangle">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PublicationAuthorID)

            <div class="form-group">
                <label class="control-label col-md-2" for="AuthorID">Author</label>
                <div class="col-md-10">
                    @Html.DropDownList("AuthorID", null, String.Empty, new { @class = "form-control big-dropbox" })
                    @Html.ValidationMessageFor(model => model.AuthorID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="AuthorTypeID">Author Type</label>
                <div class="col-md-10">
                    @Html.DropDownList("AuthorTypeID", null, String.Empty, new { @class = "form-control big-dropbox" })
                    @Html.ValidationMessageFor(model => model.AuthorTypeID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Percent, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Percent, new { htmlAttributes = new { @class = "big-textarea form-control" } })
                    @Html.ValidationMessageFor(model => model.Percent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "PubAuthorsIndex", routeValues: new { publicationId = ViewBag.PublicationID }, htmlAttributes: new { })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
