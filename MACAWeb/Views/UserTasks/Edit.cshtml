@model MACAWeb.Models.UserTask

@{
    ViewBag.Title = "Tasks";
}

<div class="main-content">
    <h2>Edit Task</h2>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal inner-rectangle">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TaskId)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control big-textarea", @rows = 6 } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="InstanceId">Choose Instance</label>
                <div class="col-md-10">
                    @Html.DropDownList("InstanceId", null, String.Empty, new { @class = "form-control big-textarea" })
                    @Html.ValidationMessageFor(model => model.InstanceId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="FunctionId">Choose Function</label>
                <div class="col-md-10">
                    @Html.DropDownList("FunctionId", null, String.Empty, new { @class = "form-control big-textarea" })
                    @Html.ValidationMessageFor(model => model.FunctionId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
