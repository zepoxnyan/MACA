@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta itemprop="name" content="MACA" />
    <meta property="og:title" content="MACA" />
    <meta itemprop="description" content="Web platform for monitoring academic activities." />
    <meta id="meta-tag-description" property="og:description" content="Web platform for monitoring academic activities." />
    <meta name="description" content="Web platform for monitoring academic activities." />
    <meta name="keywords" content="MACA,UPJŠ,Prirodovedecka fakulta" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/macaicon.ico" />
    <title>@ViewBag.Title - MACA</title>
    <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top mb-5 shadow primary">
        <div class="container primary">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Images/macaIcon.png" width="40" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("About MACA", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("People", "People", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Publications", "Publications", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Projects", "Projects", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <!--Page Content-->
    <div class="container">
        <div class="card border-1 shadow my-5 primary">
            <div class="card-body p-4">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer id="sticky-footer" class="py-4 primary border-1">
                    <div class="col-md-8">
                        <a href="https://www.upjs.sk/prirodovedecka-fakulta/ustav/umv/" target="_new">&copy; @DateTime.Now.Year - Univerzita Pavla Jozefa Šafárika v Košiciach, Prírodovedecká fakulta</a>
                    </div>
                    <div class="col-md-4">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "block-link" })
                        @Html.ActionLink("Press", "Press", "Home", null, new { @class = "block-link" })
                    </div>
        </footer>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>