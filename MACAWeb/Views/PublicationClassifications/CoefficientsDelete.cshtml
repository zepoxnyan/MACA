@model MACAWeb.Models.PublicationClassificationCoefficient

@{
    ViewBag.Title = "Publication Classifications";
}

<div class="main-content">
    <h2>Delete Publication Classification's Coefficient</h2>

    <hr />

    <div class="inner-rectangle">
        <h3>Are you sure you want to delete this publication classification's coefficient?</h3>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PublicationClassificationID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PublicationClassification.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PublicationTypeGroupID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PublicationTypeGroup.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Year)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Year)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Coefficient)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Coefficient)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        }
    </div>

    <div>
        @Html.ActionLink("Back to List", "CoefficientsIndex", routeValues: new { pubClassId = ViewBag.PublicationClassificationID }, htmlAttributes: new { })
    </div>
</div>